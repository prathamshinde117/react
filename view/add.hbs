<body>
    <form class="needs-validation" action="/addplayer">
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationTooltip01">PLAYER ID</label>
      <input type="text" class="form-control" id="player_id" name="player_id" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="validationTooltip02">PLAYER NAME</label>
      <input type="text" class="form-control" id="player_name" name="player_name" required>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationTooltip03">City</label>
      <input type="text" class="form-control" id="city" name="city" required>

      <label for="validationTooltip03">Gender</label>
      <input type="text" class="form-control" id="gender" name="gender" required>

      <label for="validationTooltip03">DOB</label>
      <input type="text" class="form-control" id="DOB" name="DOB" required>
      
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationTooltip03">SPORTS PLAYED</label>
      <input type="text" class="form-control" id="sports_played" name="sports_played" required>

      <label for="validationTooltip03">MATCHES PLAYED</label>
      <input type="text" class="form-control" id="match_played" name="match_played" required>
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Submit form</button>
</form>
