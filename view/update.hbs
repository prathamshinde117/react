<body>
    <form class="needs-validation" action="/updatebyid">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="validationTooltip01">PLAYER ID</label>
                <input type="text" class="form-control" id="player_id" name="player_id" required>
                <button type="submit" id="del">UPDATE</button>
            </div>
            <a href="./">BACK TO HOME PAGE</a>
            </form>
        </div>
        {{#data}}
        <form action="/updateplayer">
            <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationTooltip01">PLAYER ID</label>
      <input type="text" class="form-control" id="player_id" name="player_id" value="{{player_id}}" readonly>
    </div>
    <div class="col-md-6 mb-3">
      <label for="validationTooltip02">PLAYER NAME</label>
      <input type="text" class="form-control" id="player_name" name="player_name" value="{{player_name}}">
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationTooltip03">City</label>
      <input type="text" class="form-control" id="city" name="city" value="{{city}}">

      <label for="validationTooltip03">Gender</label>
      <input type="text" class="form-control" id="gender" name="gender" value="{{gender}}" readonly>

      <label for="validationTooltip03">DOB</label>
      <input type="text" class="form-control" id="DOB" name="DOB" value="{{DOB}}"readonly>
      
    </div>
    <div class="col-md-3 mb-3">
      <label for="validationTooltip03">SPORTS PLAYED</label>
      <input type="text" class="form-control" id="sports_played" name="sports_played" value="{{sports_played}}"">

      <label for="validationTooltip03">MATCHES PLAYED</label>
      <input type="text" class="form-control" id="match_played" name="match_played" value="{{match_played}}">
    </div>
  </div>
  <button class="btn btn-primary" type="submit"}" >Update player</button>
  </form>
     {{/data}}

     {{#if mesg}}
     <h1>UPDATED</h1>
     {{/if}}
</body>
